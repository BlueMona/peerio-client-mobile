{
  "name": "peerio",
  "version": "0.0.0",
  "homepage": "https://github.com/PeerioTechnologies/peerio-client-mobile",
  "authors": [
    "Peerio"
  ],
  "license": "MIT",
  "private": true,
  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "test",
    "tests"
  ],
  "dependencies": {
    "normalize.css": "*",
    "font-awesome": "*",
    "react": "0.13.x",
    "gsap": "*",
    "classnames": "*",
    "peerio-client-api": "git@github.com:PeerioTechnologies/peerio-client-api.git",
    "react-router": "~0.13.3",
    "peerio-copy": "git@github.com:PeerioTechnologies/peerio-copy.git#dev",
    "reconnectingwebsocket": "git@github.com:joewalnes/reconnecting-websocket.git",
    "awesomplete": "*"
  },
  "install": {
    "base": "www/bower",
    "path": {
      "css": "",
      "js": "",
      "/font-awesome\\.css/": "{name}/css",
      "/fontawesome-webfont.*/": "{name}/fonts",
      "/peerio-client-api/dist/dict.*txt/": "{name}",
      "/peerio-copy/client_en.json/": "../../locales"
    },
    "sources": {
      "peerio-client-api": "bower_components/peerio-client-api/dist/**",
      "peerio-copy": {
        "mapping": {
          "bower_components/peerio-copy/client_en.json": "../en.json"
        }
      },
      "react-router": "bower_components/react-router/build/umd/ReactRouter.js",
      "font-awesome": [
        "bower_components/font-awesome/css/font-awesome.css",
        "bower_components/font-awesome/fonts/fontawesome-webfont.woff",
        "bower_components/font-awesome/fonts/fontawesome-webfont.woff2"
      ],
      "react": [
        "bower_components/react/react-with-addons.js",
        "bower_components/react/react-with-addons.min.js"
      ],
      "gsap": [
        "bower_components/gsap/src/minified/tweenlite.min.js",
        "bower_components/gsap/src/minified/plugins/scrolltoplugin.min.js"
      ],
      "jssha": "bower_components/jssha/src/sha256.js",
      "classnames": "bower_components/classnames/index.js",
      "reconnectingwebsocket": "bower_components/reconnectingWebsocket/reconnecting-websocket.js",
      "awesomplete": [
        "bower_components/awesomplete/awesomplete.css",
        "bower_components/awesomplete/awesomplete.js"
      ]
    }
  }
}
